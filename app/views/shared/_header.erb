<header class="header-section">
  <div class="container">
    <div class="row">

      <div class="col-lg-4 col-md-12">
        <div class="logo">
          <%= link_to root_path, class: "logo-title" do %>
            3 : 00 p.m.
          <% end %>
        </div>
      </div>

      <div class="col-lg-6 col-md-8">
        <div class="search-form">
          <%= search_form_for @search, url: search_path do |f| %>
            <%= f.text_field :title_or_content_cont, placeholder: "検索" %>
            <div aria-hidden="true">
              <%= icon('fas', 'search')%>
            </div>
          <% end %>
          
        </div>
      </div>
      <% if logged_in? %>
        <div class="col-lg-2 col-md-4">
          <div class="login-links">
            <%= link_to current_user, class: "login-button" do %>
              <%= icon('fas', 'home')%>mypage
            <% end %>
            <%= link_to logout_path, method: :delete, class: "login-button" do %>
              <%= icon('fas', 'sign-out-alt')%>Logout
            <% end %>

          </div>
        </div>

      <% else %>
        <div class="col-lg-2 col-md-4">
          <div class="login-links">
            <%= link_to login_path, class: "login-button" do %>
              <%= icon('fas', 'sign-in-alt')%> Login
            <% end %>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</header>