<div class="form-wrapper">

  <div class="shadow p-5 bg-white">
    <div class="form-title">new</div>

      <div class="row">
        <div class="col-md-12 col-md-offset-12">

          <div class="form-group">
            <%= form_for(@micropost) do |f| %>
              <%= render 'shared/error_messages', object: f.object %> 

              <%= f.collection_select :category_id, Category.all, :id, :name, prompt: "カテゴリー選択", id: "category_id" %> 

              <div id="img_field" onClick="$('#file').click()" >
                <div class="form-control pointer">
                  <% if @micropost.picture.url.present? %>
                    <%= image_tag(@micropost.picture.url) %>
                  <% else %>
                    <%= icon('fas', 'image pr-2')%>画像を選択する<%= icon('fas', 'image pl-2')%>
                  <% end %>
                </div>
              </div>

              <%= f.file_field :picture, accept: "image/jpeg,image/gif,image/png", class: "file-field", id: "file" %>

              <%= f.text_field :title, placeholder: "タイトル", class: "form-control", id: "title" %>

              <%= f.text_area :content, placeholder: "内容", rows: "10", class: "form-control", id: "content" %>

              <%= f.submit "投稿", class: "btn btn-info" %>

            <% end %>
          </div>

        </div>
      </div>

    </div>
  </div>
</div>
