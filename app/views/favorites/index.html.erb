<% if @favorite_microposts.blank?%>
  <p>お気に入りはまだありません。</p>

<% else %>
  <p class="">お気に入り一覧・<%= @microposts_count %>件</p>
  <div class="pict-wrapper">
    <% @favorite_microposts.each do |micropost| %>
      <div class="pict shadow bg-white rounded p-1 m-1">
        <%= link_to image_tag(micropost.picture.url), micropost_path(micropost.id)  if micropost.picture? %>
      </div>
    <% end %>
  </div>
  <%= paginate @favorite_microposts %>

<% end %>